[tool.poetry]
name = "{{packageName}}"
version = "{{packageVersion}}"
description = "Algolia Search API Client for Python."
authors = ["Algolia Team <support@algolia.com>"]
license = "MIT"
readme = "README.md"
homepage = "https://www.algolia.com"
repository = "https://github.com/algolia/algoliasearch-client-python"
keywords = ["algolia", "search", "full-text-search", "neural-search"]
classifiers = [
    "Topic :: Internet :: WWW/HTTP :: Indexing/Search",
    "Intended Audience :: Developers"
]

[tool.poetry.dependencies]
python = "^3.8"
requests = ">=2.20"

[tool.poetry.group.dev.dependencies]
mypy = ">=1.6.0"
types-requests = ">=2.28.8"
ruff = "^0.1.3"

[tool.mypy]
disallow_untyped_calls = true

[tool.ruff]
target-version = "py38"
fix = true
line-length = 88
ignore-init-module-imports = true

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
